<div class='columns'>
  <div class='column is-8 is-offset-2'>
    <%= form_for(@routine, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <%= render 'shared/errors', obj: @routine %>
      <div class='field'>
        <%= f.label :name, class: 'label' %>
        <div class='control'>
          <%= f.text_field :name, class: 'input', autofocus: true %>
        </div>
      </div>
      <div class='field'>
        <%= f.label :description, class: 'label' %>
        <div class='control'>
          <%= f.text_area :description, class: 'textarea', rows: 10 %>
        </div>
      </div>
      <div class='field is-grouped'>
        <div class='control'>
          <%= f.submit (@routine.new_record? ? (I18n.t ("helpers.submit.submit")) : (I18n.t ("helpers.submit.update"))), class: 'button is-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>